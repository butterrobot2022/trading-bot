/* CSS for mobile devices */
@media only screen and (max-width: 767px) {

    .waitlist-div {
        position: relative;
        width: 900px;
        font-size: 35px;
    }
    .details {
        width: 600px;
    }
    .details h4 {
        font-size: 40px;
    }
    .explanation {
        width: 500px;
    }
    .navbar {
        width: 1300px;
        
    }
    .logo {
        position: absolute;
        height: 700px;
        font-size: 60px;
    }
    .div-email {
        width: 700px;
    }

    .features-div h3 {
        margin-left: 350px;
        font-size: 40px;
    }

    .landing-page-footer {
        height: 400px;
        width: 1300px;
        /* font-size:xx-large; */
    }

    .contact-details {
        width: 400px;
        position: absolute;
        text-align: center;
        left: 30px;
    }

    .bottom-waitlist-form {
        width: 800px;
    }

    .features-offered {
        /* position: absolute; */
        display: block;
    }
    
    .feature.show {
        width: 200px;
        gap: 100px;

    }
    .feature-explanation {
        margin-right: 0px;
        width: 300px; 
        position: relative;
        top: 20px;
        left: -40px;
        font-size: 30px;
    }
    .feature-names {
        font-size: 40px;
        white-space: nowrap;
        /* margin-right: 300px; */
        
    }
    .contacts {
        text-align: center;
        position: relative;
        left: -30px;
    }
    .features-div {
        position: relative;
        left: 250px;
        /* gap: 500px; */
    }
}